<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
      new Noty({
          type: 'error',
          layout: 'bottomLeft',
          timeout: '5000',
          text: '<%= message %>',
          theme: 'semanticui'
      }).show();
    <% end %>
  </script>
<% end %>