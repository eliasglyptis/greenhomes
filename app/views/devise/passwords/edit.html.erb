
<section class="hero is-white is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-5-desktop is-4-widescreen">
          <h2 class="title has-text-centered">Change your password</h2>
          <%= form_for(resource, as: resource_name, class: 'box', url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
            
            <div class="field">
              <label for="" class="label">Enter Your New Password</label>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <div class="control has-icons-left">
                <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label for="" class="label">Confirm Your New password</label>
              <div class="control has-icons-left">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <%= f.submit "Change my password", class: "button is-success is-fullwidth" %>
            </div>

            <div class="has-text-centered">
              <%= link_to 'Log In', new_user_session_path %>
            </div>
            <div class="has-text-centered">
              <%= link_to "Register Here", new_user_registration_path, class: 'is-bold' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
