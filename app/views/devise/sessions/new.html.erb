
<section class="hero is-white is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-5-desktop is-4-widescreen">
          <h2 class="title has-text-centered">Log in</h2>
          
          <%= form_for(resource, as: resource_name, class: 'box', url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <label for="" class="label">Your Email</label>
              <div class="control has-icons-left">
                <%= f.email_field :email, autofocus: true, placeholder: "Your full name", autocomplete: "full-name", class: 'input' %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label for="" class="label">Your Password</label>
              <div class="control has-icons-left">
                <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class: "checkbox" %>
                  <%= f.label :remember_me, type: "checkbox" %>
                </div>
              <% end %>
            </div>
            
            <div class="field">
              <%= f.submit "Log In", class: "button is-success is-fullwidth" %>
            </div>
            <div class="field">
              <%= link_to "Login With Facebook", user_facebook_omniauth_authorize_path, class: "button is-info is-fullwidth" %>
            </div>

            <div class="has-text-centered">
              <%= link_to 'Forgot Password?', new_user_password_path %>
            </div>
            <div class="has-text-centered">
              <%= link_to "Register Here", new_user_registration_path, class: 'is-bold' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
 