<section class="hero is-white is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-12-tablet is-9-desktop is-9-widescreen">
          <% @projects.each do |project| %>
            <div class="form-layout is-split mb-5">
              <div class="form-outer">
                <div class="form-header">
                  <div class="form-header-inner">
                    <div class="left">
                      <%= link_to edit_project_path(project) do %>
                        <h3><%= project.name.capitalize %></h3>
                      <% end %>
                       
                    </div>
                    <div class="right">
                      <%= link_to 'STARTED', edit_project_path(project), class: "button is-info is-outlined is-small" %>
                    </div>
                  </div>
                </div>
                <div>
                  <div class="columns mt-5 mb-4">
                    <div class="column is-7">
                      <div class="box is-shadowless">
                        <article><%= project.description %></article>
                      </div>
                    </div>
                    <div class="columns is-mobile">
                      <div class="column">
                        <div class="box effort-box">
                          <p>Estimated level of effort</p>
                          <p class="effort-num"><%= project.estimated_effort %></p>
                        </div>
                      </div>
                      <div class="column">
                        <div class="box effort-box">
                          <p>Actual level<br /> of effort</p>
                          <p class="effort-num"><%= project.estimated_effort %></p>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              
              </div>
            </div>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</section>

